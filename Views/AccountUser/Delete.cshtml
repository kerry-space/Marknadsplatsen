@model AccountUserDeleteVm
<h2>Delete user</h2>

<h3>Are you sure you want to delete this user: </h3>
<h4>@Model.AccountUser.Name</h4>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountUser.Name)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountUser.Email)
        </dd>
        <dt class="col-sm-2">
            Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountUser.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            Country
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountUser.Country)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AccountUser.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Back to list</a>
    </form>



</div>