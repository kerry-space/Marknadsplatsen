@model CategoryDeleteVm;


<h2 class="text-center">Delete Category</h2>

<hr>

<h3 class="text-center p-4">Are you sure you want to delete this category?</h3>

<div class="d-flex justify-content-center">
    <div class="card" style="width: 22rem;">
        <div class="card-body">
            <p class="card-text">
                <strong>Id:</strong> 
                @Html.DisplayFor(model => model.Category.Id)
            </p>

            <p class="card-text">
                <strong>Name:</strong>
                @Html.DisplayFor(model => model.Category.Name)
            </p>
        </div>

        <div class="d-flex m-2">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Category.Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>

            <form asp-action="Index">
                <input type="hidden" asp-for="Category.Id" />
                <input type="submit" value="Back to List" class="btn btn-primary mx-2" />
            </form>
        </div>
    </div>
</div>