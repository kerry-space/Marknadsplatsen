@model ListingDeleteVm

<div class="container mt-5">
    <h1 class="text-center mb-4">Delete Listing</h1>

    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <p>Are you sure you want to delete this listing?</p>
            <div class="mb-3">
                <strong>Title:</strong> @Html.DisplayFor(model => model.Listing.Title) <br />
                <strong>Description:</strong> @Model.Listing.Description <br />
                <strong>Price:</strong> @Model.Listing.Price SEK
            </div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Listing.Id" />
                <div class="text-center">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
